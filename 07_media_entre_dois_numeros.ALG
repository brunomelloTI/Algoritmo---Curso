var
   N1, N2: inteiro
   M: real
inicio

    escreval ("Informe um número: ")
    leia (N1)
    escreval ("Informe outro número: ")
    leia (N2)
    M <- (N1 + N2) / 2
    escreval ("")
    escreval (N1," +",N2 ," / ","2 = x")
    Escreval (N1," +",N2 ," / ", "2 =", M)
    escreval ("")
    escreval ("A média é",  M)
fimalgoritmo